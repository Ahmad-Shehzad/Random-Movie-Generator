        android:layout_width="74.0dip"
        android:layout_height="74.0dip"
        android:layout_marginLeft="168.0dip"
        android:layout_marginTop="579.0dip"
        android:layout_marginRight="169.0dip"
        android:layout_marginBottom="78.0dip"
        android:background="#ffff0057"
        android:fontFamily="@font/archivo_narrow"
        android:gravity="center"
        android:text="Click for new film"
        android:textColor="#ffffffff"
        android:textSize="12.0sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>